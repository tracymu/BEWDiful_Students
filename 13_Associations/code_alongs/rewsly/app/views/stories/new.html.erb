<%= form_for @story do |f| %>
  <%= f.error_messages %>
  <fieldset>
    <legend>Story</legend>
    <div class='form-group'>
      <%= f.label :headline %>
      <%= f.text_field :headline, :class => 'form-control' %>
    </div>

    <div class='form-group'>
      <%= f.label :content %>
      <%= f.text_area :content, :class => 'form-control' %>
    </div>

    <%= f.submit %>
  </fieldset>
<% end %>
