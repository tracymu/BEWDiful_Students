
<%  if @shirt.errors.any? %>

  <div class = 'errors'>
    <p>There were problems creating this shirt:</p>
    <ul>
      <% @shirt.errors.full_messages.each do |message| %>
      <li><%= message %></li>
   
      <% end %>
       </ul>
  </div>

<% end %>





<%= form_for @shirt do |f| %>
<!-- f is the form builder -->
<%= f.label :name %>
<%= f.text_field :name %>

<%= f.label :description %>
<%= f.text_area :description %>

<%= f.submit %> or <%= link_to "Cancel", shirts_path %>

<% end %>
